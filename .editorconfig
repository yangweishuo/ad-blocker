# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# CSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2
quote_type = single

# HTML files
[*.html]
indent_style = space
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_style = space
indent_size = 2
quote_type = double

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows scripts
[*.{bat,cmd}]
end_of_line = crlf 